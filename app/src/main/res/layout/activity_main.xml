<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="409dp"
        android:layout_height="409dp"
        android:layout_marginBottom="161dp"
        android:layout_marginEnd="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="161dp"
        android:background="@drawable/grid"
        app:columnCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="3">

        <ImageView
            android:id="@+id/nanaImageView1"
            android:layout_width="94dp"
            android:layout_height="115dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:onClick="dropIn"
            android:tag="0"
            app:layout_column="0"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/nanaImageView2"
            android:layout_width="94dp"
            android:layout_height="115dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="5dp"
            android:onClick="dropIn"
            android:tag="1"
            app:layout_column="1"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/nanaImageView3"
            android:layout_width="94dp"
            android:layout_height="115dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="5dp"
            android:onClick="dropIn"
            android:tag="2"
            app:layout_column="2"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/nanaImageView4"
            android:layout_width="94dp"
            android:layout_height="115dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="27dp"
            android:onClick="dropIn"
            android:tag="3"
            app:layout_column="0"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/nanaImageView5"
            android:layout_width="94dp"
            android:layout_height="115dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="27dp"
            android:onClick="dropIn"
            android:tag="4"
            app:layout_column="1"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/nanaImageView6"
            android:layout_width="94dp"
            android:layout_height="115dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="27dp"
            android:onClick="dropIn"
            android:tag="5"
            app:layout_column="2"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/nanaImageView7"
            android:layout_width="94dp"
            android:layout_height="115dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="27dp"
            android:onClick="dropIn"
            android:tag="6"
            app:layout_column="0"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/nanaImageView8"
            android:layout_width="94dp"
            android:layout_height="115dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="27dp"
            android:onClick="dropIn"
            android:tag="7"
            app:layout_column="1"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/nanaImageView9"
            android:layout_width="94dp"
            android:layout_height="115dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="27dp"
            android:onClick="dropIn"
            android:tag="8"
            app:layout_column="2"
            app:layout_row="2" />
    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/winnerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="177dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="6dp"
        android:text="Winner has won"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/playAgainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="159dp"
        android:layout_marginStart="158dp"
        android:layout_marginTop="16dp"
        android:onClick="playAgain"
        android:text="Play Again!"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/winnerTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>